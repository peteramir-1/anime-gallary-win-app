{
  "name": "anime-gallery-electron",
  "productName": "Anime Gallery",
  "version": "1.0.0",
  "description": "application to list all my anime present in my animation folder",
  "main": "./app/main.js",
  "scripts": {
    "compile": "tsc --project tsconfig.json",
    "start:electron": "nodemon --watch ./src/**/* -e ts,tsx --ignore node_modules --ignore src/**/*.sqlite --exec \"npm run compile && electron-forge start\"",
    "start:server": "nodemon --watch ./src/**/* -e ts,tsx --ignore node_modules --ignore src/**/*.sqlite --ignore src/**/*.test.ts --exec \"npm run compile && cross-env mode=server node app/server/app.js\"",
    "package": "npm run compile && electron-forge package",
    "make": "npm run compile && electron-forge make",
    "publish": "npm run compile && electron-forge publish",
    "test": "SET mode=development && jest --watchAll"
  },
  "author": {
    "name": "Peter A. Labib",
    "email": "peteramir5522@outlook.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./favicon.ico",
        "out": "./build",
        "overwrite": true,
        "platform": "win32",
        "asar": true
      },
      "plugins": [
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {}
        }
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "loadingGif": "./setup.gif",
            "setupIcon": "./favicon.ico"
          }
        }
      ]
    }
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/express5": "^1.1.2",
    "better-sqlite3": "12.5.0",
    "body-parser": "^2.2.2",
    "custom-electron-titlebar": "^4.2.8",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.2.1",
    "graphql": "^16.12.0",
    "lodash": "^4.17.21",
    "systeminformation": "^5.30.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@types/babel-generator": "^6.25.8",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.0.9",
    "@types/uuid": "^11.0.0",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "jest": "^30.2.0",
    "node-abi": "^4.24.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
